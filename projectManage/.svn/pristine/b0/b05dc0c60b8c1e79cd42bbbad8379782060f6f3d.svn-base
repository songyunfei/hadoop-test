  <select id="queryCustomerByUserId" parameterType="java.lang.Integer" resultMap="CustomerViewMap">
  	SELECT
		c.customerId AS customerId,
		c.companyName AS companyName,
		c.addressDetail AS addressDetail,
		c.mobile AS mobile,
		cp.imgUrls AS imgUrls,
		cp.smallImageUrls AS smallImageUrls,
		cp.imgOrder AS imgOrder
	FROM
		user_relation ue
	LEFT JOIN customer c ON ue.customerId = c.customerId
	LEFT JOIN customer_pic cp ON ue.customerId = cp.customerId
	WHERE
		ue.sysUserId = #{userId}
	ORDER BY cp.imgOrder asc
  
