<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.linkGap.projectManage.dao.SysPermissionMapper">
	<resultMap id="BaseResultMap" type="com.linkGap.projectManage.model.entity.SysPermission">
		<id column="permissionId" property="permissionId" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="description" property="description" jdbcType="VARCHAR" />
		<result column="url" property="url" jdbcType="VARCHAR" />
		<result column="pid" property="pid" jdbcType="BIGINT" />
		<result column="hasChildren" property="hasChildren" jdbcType="TINYINT" />
	</resultMap>
	
	<select id="findAll" resultMap="BaseResultMap">

		SELECT * from sys_permission ;
	</select>

	<select id="findByAdminUserId" parameterType="int" resultMap="BaseResultMap">
		select p.*
		from sys_user u
		LEFT JOIN sys_role_user sru on u.sysUserId= sru.sysUserId
		LEFT JOIN sys_role r on sru.sysRoleId=r.sysRoleId
		LEFT JOIN sys_permission_role spr on spr.sysRoleId=r.sysRoleId
		LEFT JOIN sys_permission p on p.permissionId=spr.permissionId
		where p.pid !=9999  and u.sysUserId=#{userId} 
	</select>
</mapper>